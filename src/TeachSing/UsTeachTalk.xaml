        <Grid x:Name="UniformGrid" Grid.Row="3" Grid.Column="1" MouseDown="UniformGrid_MouseDown">
            <!--<Image Source="Image\TeachTalk\星拷贝8.png" HorizontalAlignment="Center" />-->

            <Grid.RowDefinitions>
                <RowDefinition Height="208"/>
                <RowDefinition Height="43"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="38"/>
                <RowDefinition Height="211"/>
                <RowDefinition Height="43"/>
                <RowDefinition Height="32"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="38"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="30"/>
            </Grid.ColumnDefinitions>
            <Image x:Name="ImageTalk1"  Stretch="Fill" Grid.Row="0" Grid.Column="1" MouseLeftButtonUp="Image_MouseDown" />
            <Label Name="lblTalk1" Grid.Row="1" Grid.Column="1" Content="节日" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="26" Foreground="#333333" MouseLeftButtonUp="Image_MouseDown"/>
            <Label Name="landu1"  Grid.Row="2" Grid.Column="1" Content="难度:" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Foreground="#666666" MouseLeftButtonUp="Image_MouseDown"/>
            <Image Name="Star1" Grid.Row="2" Grid.Column="1" Source="Image\FirstImage\threeStar.png" HorizontalAlignment="Left" Margin="55,0,0,0" Stretch="None"/>

            <Image x:Name="ImageTalk2" Stretch="Fill"  Grid.Row="0" Grid.Column="3"   MouseLeftButtonUp="Image_MouseDown" />
            <Label Name="lblTalk2" Grid.Row="1" Grid.Column="3" Content="准备打卡" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="26" Foreground="#333333" MouseLeftButtonUp="Image_MouseDown"/>
            <Label  Name="landu2"  Grid.Row="2" Grid.Column="3" Content="难度:" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="20" Foreground="#666666" />
            <Image Name="Star2" Grid.Row="2" Grid.Column="3" Source="Image\FirstImage\fiveStar.png" HorizontalAlignment="Left" Margin="55,0,0,0" Stretch="None"/>

